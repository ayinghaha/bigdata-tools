<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.iflytek.voicecloud.itm.dao.config.TagDao">

    <resultMap id="TagResult" type="Tag">
        <id property="id" column="id" />
        <result property="itmID" column="itm_id" />
        <result property="containerID" column="container_id"/>
        <result property="name" column="name"/>
        <result property="type" column="type"/>
        <result property="action" column="action"/>
        <result property="category" column="category"/>
        <result property="label" column="label"/>
        <result property="value" column="value"/>
        <result property="isDebug" column="is_debug"/>
        <result property="registTime" column="regist_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <resultMap id="TagTrigger" type="Trigger">
        <id property="id" column="id" />
        <result property="itmID" column="itm_id" />
        <result property="containerID" column="container_id"/>
        <result property="name" column="name"/>
        <result property="type" column="type"/>
        <association property="variableFilters" column="id" select="com.iflytek.voicecloud.itm.dao.config.VariableFilterDao.getFilterByTriggerId"/>
    </resultMap>

    <insert id="addTag" parameterType="Tag" keyProperty="id" useGeneratedKeys="true">
        insert into t_tag values(null, #{itmID}, #{containerID}, #{name}, #{type}, #{action}, #{category}, #{label}, #{value}, #{isDebug}, #{registTime}, #{updateTime})
    </insert>

    <insert id="addTagTriggerLink" parameterType="java.util.List" useGeneratedKeys="true">
        <selectKey resultType="long" keyProperty="id" order="AFTER">
            SELECT
            LAST_INSERT_ID()
        </selectKey>
        insert into t_tag_trigger_link values
        <foreach collection="list" index="index" item="item" separator=",">
            (null, #{item.tag.id}, #{item.trigger.id}, #{item.registTime})
        </foreach>
    </insert>

    <select id="getTagById" parameterType="Integer" resultMap="TagResult">
        select * from t_tag where id = #{id}
    </select>

    <select id="getTagList" parameterType="Tag" resultMap="TagResult">
        select * from t_tag
        <where>
            <if test="id != null and id != 0">
                id = #{id}
            </if>
            <if test="itmID != null">
                AND itm_id = #{itmID}
            </if>
            <if test="containerID != null">
                AND container_id = #{containerID}
            </if>
            <if test="type != null">
                AND type = #{type}
            </if>
            <if test="name != null">
                AND name = #{name}
            </if>
            <if test="action != null">
                AND action = #{action}
            </if>
            <if test="value != null">
                AND value = #{value}
            </if>
        </where>
        order by regist_time desc
    </select>

    <select id="getTagTriggers" resultMap="TagTrigger" parameterType="Tag">
        select tr.* from t_tag tag
            left join t_tag_trigger_link link on tag.id = link.tag_id
            left join t_trigger tr on tr.id = link.trigger_id
        where tag.id = #{id}
    </select>

    <delete id="deleteTagById" parameterType="Integer">
        delete from t_tag where id = #{id};
    </delete>

    <delete id="deleteTagLink" parameterType="Tag">
        delete from t_tag_trigger_link where tag_id = #{id}
    </delete>

    <update id="updateTag" parameterType="Tag">
        update t_tag
        <trim prefix="set" suffixOverrides=",">
            <if test="name != null">name = #{name},</if>
            <if test="type != null">type = #{type},</if>
            <if test="action != null">action = #{action},</if>
            <if test="category != null">category = #{category},</if>
            <if test="label != null">label = #{label},</if>
            <if test="value != null">value = #{value},</if>
            <if test="isDebug != null">is_debug = #{isDebug},</if>
        </trim>
        where id = #{id}
    </update>

</mapper>