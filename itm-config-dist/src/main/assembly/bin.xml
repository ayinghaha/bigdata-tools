<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
 <id>bin</id>
 <formats>
  <format>dir</format>
 </formats>
 <baseDirectory>../</baseDirectory>
 <moduleSets>
  <moduleSet>
   <useAllReactorProjects>true</useAllReactorProjects>
   <includes>
    <include>com.iflytek.maple:itm-config-mr</include>
   </includes>
   <binaries>
    <unpack>false</unpack>
    <outputDirectory>lib</outputDirectory>
    <dependencySets>
     <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>lib</outputDirectory>
      <excludes>
       <exclude>xerces:xercesImpl</exclude>
      </excludes>
     </dependencySet>
    </dependencySets>
   </binaries>
   <sources>
    <includeModuleDirectory>true</includeModuleDirectory>
    <excludeSubModuleDirectories>false</excludeSubModuleDirectories>
    <fileSets>
     <fileSet>
      <includes>
       <include>../itm-config-mr/lib-native/**</include>
      </includes>
      <excludes>
       <exclude>target/**</exclude>
       <exclude>*/target/**</exclude>
       <exclude>.classpath</exclude>
       <exclude>*/.classpath</exclude>
       <exclude>.project</exclude>
       <exclude>*/.project</exclude>
       <exclude>.settings/**</exclude>
       <exclude>*/.settings/**</exclude>
      </excludes>
     </fileSet>
    </fileSets>
   </sources>
  </moduleSet>
 </moduleSets>
 <fileSets>
  <fileSet>
   <directory>../itm-config-mr/lib-native</directory>
   <outputDirectory>lib</outputDirectory>
   <includes>
    <include>**</include>
   </includes>
  </fileSet>
  <fileSet>
   <directory>../itm-config-data</directory>
   <outputDirectory>data</outputDirectory>
   <includes>
    <include>**</include>
   </includes>
  </fileSet>
  <fileSet>
   <directory>../itm-config-wf/oozie</directory>
   <outputDirectory>oozie</outputDirectory>
   <includes>
    <include>**</include>
   </includes>
  </fileSet>
  <fileSet>
   <directory>../</directory>
   <excludes>
    <exclude>itm-config-mr/**</exclude>
    <exclude>**/target/**</exclude>
    <exclude>**/.classpath</exclude>
    <exclude>**/.project</exclude>
    <exclude>**/.settings/**</exclude>
    <exclude>lib/**</exclude>
   </excludes>
   <includes>
    <include>.gitignore</include>
    <include>DEVNOTES</include>
    <include>README</include>
    <include>LICENSE</include>
    <include>NOTICE</include>
    <include>CHANGELOG</include>
    <include>RELEASE-NOTES</include>
    <include>bin/**</include>
    <include>conf/**</include>
    <include>pom.xml</include>
   </includes>
  </fileSet>
 </fileSets>
</assembly>
